@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>SonyaSite</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div style="position:absolute;width:100%;height:100%;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="z-index:-20;width:100%;height:100%;">
            <div class="item-active">
                <img src="https://d68b3152cf5d08c2f050-97c828cc9502c69ac5af7576c62d48d6.ssl.cf3.rackcdn.com/includes/img/cms/site-images/orig/kingston-university-9cc2010-computing-and-information-syste.jpg" style="width:100%;">
            </div>
        </div>

        <div style="position:absolute;width:100%;top:5%;left:0%;z-index:20;">
            <div class="container" style="width:40%">
                @*<img src="~/Content/Logo/logo.png" />*@
            </div>

            <div class="container" style="width:40%;">
                <div class="panel panel-default">
                    <div class="panel-heading">Login</div>
                    <div class="panel-body">
                        <form action="~/Account/Login" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="username">Email:</label>
                                <input type="text" class="form-control" id="email" name="email">
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" id="password" name="password">
                            </div>
                            <button type="submit" class="btn btn-default">Login</button>
                            @if (TempData.ContainsKey("Login"))
                            {
                                <span>@TempData["Login"]</span>
                            }
                        </form><br />
                        <!-- Trigger modals with buttons -->
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#forgotPassword">Recover Account</button>
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#createAccount">Register Account</button>
                        @if (TempData.ContainsKey("Account Recovery"))
                        {
                            <span>@TempData["Account Recovery"]</span>
                        }
                        <br />
                    </div>
                </div>
            </div>

            <br /><br /><br /><br /><br />

        </div>
    </div>
    <!-- Modals -->
    <div id="forgotPassword" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Recover Account</h4>
                </div>
                <div class="modal-body">
                    <form action="~/Account/RecoverAccount" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="accountRecovery_email" name="email">
                        </div>
                        <button type="submit" class="btn btn-default">Recover</button>
                    </form><br />
                </div>
            </div>

        </div>
    </div>

    <div id="createAccount" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create Account</h4>
                </div>
                <div class="modal-body">
                    <form action="~/Account/RegisterAccount" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" class="form-control" id="accountRegistration_email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input type="text" class="form-control" id="accountRegistration_firstName" name="firstName">
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input type="text" class="form-control" id="accountRegistration_lastName" name="lastName">
                        </div>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                    </form><br />
                </div>
            </div>

        </div>
    </div>
</body>
</html>